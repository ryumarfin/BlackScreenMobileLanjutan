<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="558dp"
        android:orientation="vertical"
        android:padding="10pt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="@color/MoLineMerah"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/MoLineMerah" />

        <LinearLayout
            android:background="@color/MoLineAbu"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_layanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panggil Montir"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="32dp"/>
                <TextView
                    android:id="@+id/tv_hargaht"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Rp 105.000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_keperluan"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="service motor"/>


            <TextView
                android:id="@+id/tv_tanggalht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Oct 2020"/>


        </LinearLayout>











        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/MoLineAbu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_layanan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panggil Bensin"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:id="@+id/tv_hargaht2"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Rp 254.000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_keperluan2"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Liter"/>


            <TextView
                android:id="@+id/tv_tanggalht2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Nov 2020"/>


        </LinearLayout>




        <LinearLayout
            android:background="@color/MoLineAbu"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_layanan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sparepart"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="100dp"/>
                <TextView
                    android:id="@+id/tv_hargaht3"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Rp. 85.000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_keperluan3"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunci kontak vespa"/>


            <TextView
                android:id="@+id/tv_tanggalht3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Dec 2020"/>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>