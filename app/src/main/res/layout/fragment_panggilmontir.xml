<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PanggilmontirFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panggil Montir"
            android:textAllCaps="false"
            android:textColor="@color/MoLineMerah"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/MoLineMerah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@color/MoLineAbu"
            android:padding="10dp">
            <Spinner
                android:id="@+id/spinnerJenisK"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@color/MoLinePutih"
                android:entries="@array/listJenisKendaraan"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/map"/>

            <EditText
                android:id="@+id/keluhan"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:background="@color/MoLinePutih"
                android:hint="Ceritakan Keluhan Motor Anda"/>

            <Button
                android:id="@+id/btn_cariMontir"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:layout_marginTop="10dp"
                android:text="Cari Montir"
                android:textColor="@color/white"
                android:textSize="40px"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>